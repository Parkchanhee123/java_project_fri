<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kio.app.repository.UsersRepository">

    <!-- 1. 단건 조회 -->
    <select id="selectOne" parameterType="Integer" resultType="edu.sm.app.dto.UsersDto">
        SELECT * FROM users WHERE user_id = #{userId}
    </select>

    <!-- 2. 회원 가입 -->
    <insert id="insert" parameterType="edu.sm.app.dto.UsersDto">
        INSERT INTO users (user_name, user_tel)
        VALUES (#{userName}, #{userTel})
    </insert>

    <!-- 3. 회원 정보 수정 -->
    <update id="update" parameterType="edu.sm.app.dto.UsersDto">
        UPDATE users
        SET
            user_name = #{userName},
            user_tel = #{userTel}
        WHERE user_id = #{userId}
    </update>

    <!-- 4. 삭제 -->
    <delete id="delete" parameterType="Integer">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>


</mapper>